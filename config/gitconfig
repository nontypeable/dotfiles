[core]
    excludesfile = ~/.gitignore
    autocrlf = input
    safecrlf = warn
    pager = delta
[credential]
    helper = osxkeychain
[http]
    postBuffer = 524288000
[commit]
    gpgsign = true
[push]
    default = simple
[merge]
    ff = false
[fetch]
    # Prune branches and tags that no longer exist remote.
    prune = true
    pruneTags = true
[user]
    useConfigOnly = true
[diff]
    indentHeuristic = on
    colorMoved = default
[interactive]
    diffFilter = "delta --color-only --features=interactive"
[rerere]
    enabled = 1
[submodule]
    recurse = true
    fetchJobs = 0

[delta]
    navigate = true
    inspect-raw-lines = false
    line-numbers = true

    # visual
    file-style = none
    file-decoration-style = none
    minus-style = syntax auto
[delta "interactive"]
    keep-plus-minus-markers = false

[color]
    ui = true
[color "diff"]
    meta = black
    frag = blue bold
    commit = black bold
    old = red bold
    new = green bold
    whitespace = red reverse

[alias]
    prune-branches = "!git fetch -p && for branch in $(git for-each-ref --format '%(refname) %(upstream:track)' refs/heads | awk '$2 == \"[gone]\" {sub(\"refs/heads/\", \"\", $1); print $1}'); do git branch -D \"$branch\"; done"
    main = "!git checkout main > /dev/null 2>&1 || git checkout master"
    full-clean = "!git reset -q && git checkout -- . && git clean -fd"

[pull]
    rebase = false
[init]
    defaultBranch = main

[include]
    path = ~/.gitconfig_local
